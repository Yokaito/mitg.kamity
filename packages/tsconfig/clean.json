{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Clean React",
  "compilerOptions": {
    "target": "es6",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "rootDirs": ["src"],
    "baseUrl": "src",
    "allowJs": true,
    "resolveJsonModule": true
  }
}
